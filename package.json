{
  "name": "daily-brief-api",
  "version": "1.0.0",
  "description": "api daily breif management daily report",
  "main": "main.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "dev": "nodemon src/main.ts",
    "ts.check": "tsc --project tsconfig.json",
    "postinstall": "prisma generate",
    "build-prisma": "prisma generate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && rm -rf dist/src/templates && mkdir -p dist/src/templates && cp -r src/templates/* dist/src/templates/"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "prisma": {
    "seed": "ts-node prisma/seeders/seed.ts"
  },
  "author": "irvan",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.6.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}